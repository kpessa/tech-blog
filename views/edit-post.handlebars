<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <p class="title mt-2">Edit Post</p>
  <form class="edit-post-form">
    <div class="container">
      <div>
        <input name="post-title" type="text" value="{{post.title}}" />
      </div>
      <div class="content mt-1">
        <textarea name="post-content" type="text" rows=5>{{post.content}}</textarea>
      </div>
      <div class=mt-1>
        by you on {{format_date post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
      </div>
      <button type="submit" class=mt-2>Save post</button>
      <button type="button" class="delete-post-btn mt-1">Delete post</button>
    </div>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>